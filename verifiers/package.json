{
  "name": "pinkypromiseverifier",
  "version": "0.0.1",
  "description": "",
  "repository": "https://github.com/mickdegraaf/pinkypromise",
  "private": false,
  "scripts": {
    "build": "yarn clean && yarn install && yarn compile && npx tsc",
    "compile": "npx hardhat compile --force",
    "clean": "rm -rf dist",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write */**/*.*{js,sol,json,md,ts}",
    "format:check": "prettier --check */**/*.*{js,sol,json,md,ts}",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify",
    "verifier": "npx ts-node verifier.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "10.2.0",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "dotenv": "16.0.3",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "4.0.10",
    "ethers": "5.7.2",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.2",
    "solhint": "3.4.0",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "8.1.1",
    "typescript": "^5.2.2",
    "ts": "^0.2.2"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  },
  "devDependencies": {}
}
